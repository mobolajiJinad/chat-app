doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title 

    link(rel="stylesheet", href="/style.css")
    link(rel="stylesheet", href="/auth.css")
  body 
    include ./flash.pug

    .container
      .auth_container
        form(action='/auth/signup', method='POST')
          label(for='username') Enter a username
          input#username(type='text', name='username', required='true')

          label(for='password') Enter password
          input#password(type='password', name='password' required="true")

          label(for='confirm_password') Confirm password
          input#confirm_password(type='password', name='confirm_password' required="true")

          .checkbox_container
            input#show_password(type='checkbox', name='show_password')
            label(for='show_password') Show password

          input.button(type='submit', value='Sign up')

        p.auth_text
          | Already have an account? 
          a(href='/auth/login') Log in

    script.
      const showPassword = document.getElementById("show_password");

      const password = document.getElementById("password"),
      confirmPassword = document.getElementById("confirm_password");

      showPassword.addEventListener("change", (e) => {
        if (showPassword.checked) {
          password.type = "text";
          confirmPassword.type = "text";
        } else {
          password.type = "password";
          confirmPassword.type = "password";
        }
      });